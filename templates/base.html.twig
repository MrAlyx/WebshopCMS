<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

        {% endblock %}
    </head>
    <body>
    <style>
        .navbar-brand {
            position: relative;
            background: url(../images/logo.png);
            width: 170px;
            left: 15px;
            background-size: contain;
        }
    </style>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        <a class="sticky-top navbar-brand my-0 mr-md-auto " href="/">
            <img src="/image/bol.png" class="navbar-brand">
        </a>
        <nav class="my-2 my-md-0 mr-md-5">
            <a class="p-2 text-dark" href="/">Home</a>
            <a class="p-2 text-dark" href="#">Products</a>
            <a class="p-2 text-dark" href="{{ path('contact') }}">Contact Us</a>
            {% if app.user %}
                <a class="btn btn-outline-primary" href="/{{ path('app_logout') }}">Logout {{ app.user.username }}</a>
            {% else %}
            <a class="p-2 text-dark" href="/{{ path('app_login') }}">Login</a>

            <a class="btn btn-outline-primary" href="register">Sign up</a>
            {% endif %}
        </nav>

    </div>
    {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
